{
  "name": "@tecocraft/rn-deeplinking",
  "version": "2.0.0",
  "description": "Manage deep links (Android app links + iOS universal links) in React Native projects with a simple API.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "dev": "tsup src/index.ts --format esm,cjs --watch"
  },
  "keywords": [
    "react-native",
    "deeplinking",
    "universal-links",
    "app-links",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiragjanjmeratecocraft/RN-Dynamic-Link-SDK.git"
  },
  "author": "tecocraft <nayan.wadekar@tecocraft.com> (https://github.com/nayantecocraft)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chiragjanjmeratecocraft/RN-Dynamic-Link-SDK/issues"
  },
  "homepage": "https://github.com/chiragjanjmeratecocraft/RN-Dynamic-Link-SDK#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./useSmartLinking": {
      "types": "./lib/useSmartLinking.d.ts",
      "default": "./lib/useSmartLinking.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.16",
    "@types/react-native": "^0.72.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.1.1",
    "react-native": "0.81.4",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "react-native-device-info": "^15.0.1"
  }
}
